<info>
	<id>repos</id>
	<name>Repositories</name>
	<summary>Integration for Git, Git-Annex, and Datalad repositories within Nextcloud</summary>
	<description>
		<![CDATA[
			Repositories provides integration for managing Git, Git-Annex, and Datalad repositories within Nextcloud.

			This app enables version-controlled collaborative workflows for research data management, code repositories,
			and structured file versioning using Git and related tools.

			The app is currently in development and undergoing refactoring from the original groupfolders codebase.
		]]>
	</description>	<version>1.0.0-dev.1</version>
	<licence>agpl</licence>
	<author>Markus Katharina Brechtel</author>
	<namespace>Repos</namespace>
	<types>
		<filesystem/>
		<dav/>
	</types>

	<category>files</category>

	<website>https://codeberg.org/mkbrechtel/nextcloud-repos</website>
	<bugs>https://codeberg.org/mkbrechtel/nextcloud-repos/issues</bugs>
	<repository type="git">https://codeberg.org/mkbrechtel/nextcloud-repos.git</repository>

	<dependencies>
		<nextcloud min-version="32" max-version="32" />
	</dependencies>

	<commands>
		<command>OCA\Repos\Command\ListCommand</command>
		<command>OCA\Repos\Command\ACL</command>
		<command>OCA\Repos\Command\Quota</command>
		<command>OCA\Repos\Command\Group</command>
		<command>OCA\Repos\Command\Create</command>
		<command>OCA\Repos\Command\Rename</command>
		<command>OCA\Repos\Command\Delete</command>
		<command>OCA\Repos\Command\Scan</command>
	</commands>

	<sabre>
		<collections>
			<collection>OCA\Repos\DAV\RootCollection</collection>
		</collections>
		<plugins>
			<plugin>OCA\Repos\DAV\PropFindPlugin</plugin>
			<plugin>OCA\Repos\DAV\ACLPlugin</plugin>
		</plugins>
	</sabre>

	<trash>
		<backend for="OCA\Repos\Mount\GroupFolderStorage">OCA\Repos\Trash\TrashBackend</backend>
	</trash>

	<versions>
		<backend for="OCA\Repos\Mount\GroupFolderStorage">OCA\Repos\Versions\VersionsBackend</backend>
	</versions>
</info>
